{
    "id" : "io.github.gillesdegottex.FMIT",
    "branch" : "stable",
    "runtime" : "org.kde.Platform",
    "sdk" : "org.kde.Sdk",
    "runtime-version" : "5.9",
    "command" : "fmit",
    "rename-icon" : "fmit",
    "rename-desktop-file" : "fmit.desktop",
    "rename-appdata-file" : "fmit.appdata.xml",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        /* acs_alsa support */
        "--socket=pulseaudio",
        /* acs_jack support */
        "--device=all"
    ],
    "modules" : [
        {
            "name": "fftw",
            "config-opts" : [
                "--enable-shared",
                "--disable-static"
            ],
            "cleanup" : [
            	"/bin",
                "/include",
                "/lib/*.la",
                "/lib/cmake",
                "/lib/pkgconfig",
                "/share/info",
                "/share/man"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "http://www.fftw.org/fftw-3.3.7.tar.gz",
                    "sha1": "2ae980a8d44c161ce4a09c6e2d1c79243ecbabb2"
                }
            ]
        },
        {
            "name" : "jack2",
            "buildsystem" : "simple",
            "build-commands" : [
                "python3 waf configure --prefix=/app --htmldir=/app/share/doc/jack/ --freebob=no --classic",
                "python3 waf build",
                "python3 waf install"
            ],
            "cleanup" : [
            	"/bin",
            	"/include",
            	"/share",
            	"/lib/jack",
            	"/lib/libjackserver.so*",
            	"/lib/pkgconfig"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/jackaudio/jack2/archive/v1.9.12.tar.gz",
                    "sha512" : "f0271dfc8f8e2f2489ca52f431ad4fa420665816d6c67a01a76da1d4b5ae91f6dad8c4e3309ec5e0c159c9d312ed56021ab323d74bce828ace26f1b8d477ddfa"
                }
            ]
        },
        {
            "name" : "fmit",
            "buildsystem" : "qmake",
            "config-opts" : [
                "PREFIXSHORTCUT=/app",
                "FFT_LIBDIR=/app",
                "CONFIG+=acs_alsa acs_jack"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/gillesdegottex/fmit.git",
                    "commit" : "a24fd037f1a1ef5917658b893562640d9ce8cdc4"
                },
                {
                    /* acs_qt does not work on Linux */
                    "type" : "shell",
                    "commands" : [ "sed -i -e 's/CONFIG += acs_qt//g' fmit.pro" ]
                },
                {
                    /* must be done before calling qmake, or translations will not be installed (?) */
                    "type" : "shell",
                    "commands" : [ "lrelease fmit.pro" ]
                }
            ]
        }
    ]
}
